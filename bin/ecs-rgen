#!/usr/bin/env ruby
# frozen_string_literal: true

require 'rubygems'
require 'bundler'
Bundler.require(:default)

module Ecsrgen
  VERSION = '0.0.1'
end

require 'logger'

require_relative '../option_parser'
require_relative '../listener'
require_relative '../rgen_logger'
require_relative '../scanner'

opts = OptionParser.parse
logger = RgenLogger.logger opts

trap('SIGINT') do
  puts "\nGoodbye!"
  exit!
end

Listener.new(opts, logger).run
